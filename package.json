{
  "name": "vota-sp",
  "version": "1.0.0",
  "main": "index.js",
  "license": "MIT",
  "scripts": {
    "server": "http-server dist -p 80",
    "start": "NODE_ENV=dev parcel index.html",
    "build": "parcel build index.html",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:watch:coverage": "jest --watch --coverage",
    "postinstall": "cd functions && npm install",
    "firebase": "firebase",
    "firebase:deploy": "npm run build && firebase deploy --only hosting"
  },
  "jest": {
    "setupTestFrameworkScriptFile": "./enzyme-setup.js",
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|scss|sass)$": "<rootDir>/__mocks__/styleMock.js"
    },
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "collectCoverage": true,
    "coverageReporters": [
      "lcov",
      "text-summary",
      "html"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    },
    "modulePathIgnorePatterns": [
      "src/firebaseSetup.js",
      "src/index.js",
      "src/redux/reducers.js",
      "src/redux/store.js"
    ]
  },
  "dependencies": {
    "axios": "^0.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react-app": "^3.1.2",
    "classnames": "^2.2.6",
    "firebase": "^5.2.0",
    "history": "^4.7.2",
    "parcel": "^1.9.7",
    "react": "^16.4.1",
    "react-dom": "^16.4.1",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "react-social-login-buttons": "^2.1.0",
    "redux": "^4.0.0"
  },
  "devDependencies": {
    "babel-core": "^6.26.3",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2017": "^6.24.1",
    "babel-runtime": "^6.26.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.4",
    "firebase-tools": "^3.19.3",
    "jest": "^23.4.0",
    "node-sass": "^4.9.2"
  }
}
